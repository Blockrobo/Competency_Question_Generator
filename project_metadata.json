    "components": [
      {
        "name": "Teacher Interface",
        "file": "src/teacher_interface.py",
        "purpose": "Interactive CLI for teacher input collection"
      },
      {
        "name": "Worksheet Backend",
        "file": "src/worksheet_backend.py",
        "purpose": "Multi-agent system and prompt orchestration"
      },
      {
        "name": "Curriculum Topics",
        "file": "src/curriculum_topics.py",
        "purpose": "Lehrplan 21 competency loader and manager"
      },
      {
        "name": "Competency Database",
        "file": "data/lehrplan21.json",
