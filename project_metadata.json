      "intermediate": {
        "scaffolding": "Medium",
        "cognitive_type": "Application, analysis, simple reasoning",
        "independence": "Moderate independence with structure",
        "problem_space": "Defined with multiple valid solutions",
        "prior_knowledge": "Assumed from beginner level"
      },
      "advanced": {
        "scaffolding": "Low",
        "cognitive_type": "Evaluation, creation, independent reasoning",
        "independence": "Full autonomy",
        "problem_space": "Ill-defined, learner helps define it",
        "prior_knowledge": "Synthesis of multiple concepts"
      }
